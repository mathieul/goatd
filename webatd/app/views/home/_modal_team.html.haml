#modal-team.modal.hide.fade
  .modal-header
    %button.close(data-dismiss="modal" aria-hidden="true") &times;
    %h3 {{modalTeam.labels.title}}
  .modal-body
    %form#team-form.form-horizontal
      .control-group.first.last
        %label.control-label(for="team-name") Name
        .controls
          %input(type="text"
                 id="team-name"
                 placeholder="My Team"
                 ng-model="modalTeam.name"
                 required)
  .modal-footer
    %a.btn(href data-dismiss="modal") Close
    %input.btn.btn-primary(type="submit" form="team-form" value="{{modalTeam.labels.action}}")

#modal-del-team.modal.hide.fade
  .modal-header
    %button.close(data-dismiss="modal" aria-hidden="true") &times;
    %h3 Delete Team
  .modal-body
    %form#del-team-form
      %p
        Are you sure you want to delete "{{modalConfirm.name}}"?
  .modal-footer
    %a.btn(href data-dismiss="modal") Cancel
    %input.btn.btn-primary(type="submit" form="del-team-form" value="Delete")
