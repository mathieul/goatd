%script(type="text/ng-template" id="teams.html")
  %h3 Team
  %table.table.table-striped.table-hover
    %thead
      %tr
        %th Uid
        %th Name
        %th &nbsp;
    %tbody
      %tr(ng-hide="teams.length")
        %td(colspan="3")No teams yet.
      %tr(ng-repeat="team in teams")
        %td {{team.uid}}
        %td {{team.name}}
        %td
          %a(href ng-click="message('TODO: edit ' + team.name)") Edit

  #my-modal.modal.hide.fade
    .modal-header
      %button.close(data-dismiss="modal" aria-hidden="true") &times;
      %h3 Modal Header
    .modal-body
      %p One fine body...
    .modal-footer
      %a.btn(href data-dismiss="modal") Close
      %a.btn.btn-primary(href) Save changes

  %a.btn(href="#my-modal" role="button" data-toggle="modal") Launch modal
